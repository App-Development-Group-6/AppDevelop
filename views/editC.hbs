<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="mystyle.css">
    </link>
    <title>Upadte Course page</title>
</head>

<body>
    <div class="navbar navbar-dark bg-dark box-shadow">
        <div class="container d-flex justify-content-between">
            <a href="/" class="navbar-brand d-flex align-items-center">
                <strong>FPT Software</strong>
            </a>
            <a class="account_image" href="profile"><img src="images/account.png" alt="account icon" width="30px"
                    height="30px"> {{dataInfo.role}} - {{dataInfo.userName}} </a>
            <a href="/logout">Logout</a>
        </div>
    </div>
    <center>
        <div class="trainer_menu">
            <ul>
                <li class="menubar"><a href="/trainerIndex">Home</a></li>
                <li class="menubar"><a href="/trainer/course">Course</a></li>
                <li class="menubar"><a href="/trainer/about"></a>About</li>
                <li class="menubar"><a href="/trainer/contact"></a>Contact</li>
                <li class="menubar"><a href="profile">Profile</a></li>
            </ul>
        </div>
        <hr>
        <div>
            <form action="updateCourse" method="post" border="1">
                <input type="hidden" name="id" value="{{course._id}}">
                Course's ID: <input type="text" name="txtId" value="{{course.courseId}}" id="">
                <br><br>
                Course's Name: <input type="text" name="txtCourseName" value="{{course.courseName}}" id="">
                <br><br>
                Mount of Trainess:
                <input type="text" name="txtMount" value="{{course.mount}}">
                <br>
                <input type="submit" value="Update Course">
            </form>
        </div>
    </center>

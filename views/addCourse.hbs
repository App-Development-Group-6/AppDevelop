    <center>
        <br>
        <h1>Enter Course's information</h1>
        <br>
        <form method="post" action="addCourse">
            Course's ID: <input type="text" name="txtId" id="">
            <br><br>
            Course's Name: <input type="text" name="txtCourseName" id="">
            <br><br>
            Time Start: <input type="date" name="txtTimeStart" id="">
            --->
            End: <input type="date" name="txtTimeEnd" id="">
            <br><br>
            Mount of Trainess:
            <input type="text" name="txtMount">
            <br><br>
            <input class="btn btn-success" type="submit" value="Add Course">
        </form>
    </center>
